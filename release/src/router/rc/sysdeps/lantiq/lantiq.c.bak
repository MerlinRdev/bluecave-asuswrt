int get_usb_mode()
{
	int ret = 0;
	FILE *fp;
	char *tmp;
	unsigned int value;
	char buf[64];

	memset(buf, 0, sizeof(buf));
	if((fp = popen("mem -s 0x1a40c020 -du", "r")) != NULL)
	{
		fgets(buf, sizeof(buf), fp);
		tmp = strchr(buf, ':');
		if (tmp)
		{
			value = strtol(tmp + 1, NULL, 16);
			_dprintf("Read 0x1a40c020 as [0x%08x]\n", value);
			ret = 1;
			if(value == 0x2000)
				ret = 0;
			else if (value)
				ret = -1;
		} else
			ret = 0;
		pclose(fp);
	}
	return ret;
}

